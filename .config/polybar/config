[global/wm]
margin-top = 0
margin-bottom = 0

[colours]
bg =    #ee292f37
maia =  #81a2be
white = #ecefef
red =   #cc6666
grey =  #ecefef
;f263238
clear = #00

[bar/top]
;monitor = Virtual-1
width = 100%
height = 32
radius = 0
bottom = true
fixed-center = true
background = ${colours.bg}
foreground = ${colours.maia}
;font-0 = SFMono Display:size=14;2
font-0 = SF Pro Text Display:size=14;3
font-1 = FontAwesome:size=14;3
font-2 = MaterialIcons:size=14;4
module-margin-left = 3
modules-left   = i3 
modules-center = clock
modules-right  =  volume cpu memory temperature battery wifi powermenu

[module/clock]
type = internal/date
;date =  %{F#66}%a %b %d  %{F#17a086} %I:%M %p
date =  %{F#ecefef}%a %b %d  %{F#17a086} %I:%M %p
[module/cpu]
type = internal/cpu

; Seconds to sleep between updates
; Default: 1
interval = 0.5
format = <label>

; Available tokens:
;   %percentage% (default) - total cpu load
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = CPU %percentage%%



[module/memory]
type = internal/memory

; Seconds to sleep between updates
; Default: 1
interval = 3
format = <label> 
label = RAM %gb_used%
[module/temperature]
type = internal/temperature

; Seconds to sleep between updates
; Default: 1
interval = 0.5

; Thermal zone to use
; To list all the zone types, run 
; $ for i in /sys/class/thermal/thermal_zone*; do echo "$i: $(<$i/type)"; done
; Default: 0
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon3/temp2_input
warn-temperature = 60

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP0
full-at = 100
format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>

label-charging-foreground = ${colours.white}
label-discharging-foreground = ${colours.white}
label-full-foreground = ${colours.white}

label-charging-font = 0
label-discharging-font = 0
label-full-font = 0

ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colours.red}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colours.maia}
ramp-capacity-2 = 
ramp-capacity-2-foreground = ${colours.maia}
ramp-capacity-3 = 
ramp-capacity-3-foreground = ${colours.maia}
ramp-capacity-4 = 
ramp-capacity-4-foreground = ${colours.maia}

animation-charging-0 = %{F#17a086} 
animation-charging-1 = %{F#17a086} 
animation-charging-2 = %{F#17a086} 
animation-charging-3 = %{F#17a086} 
animation-charging-4 = %{F#17a086} 
animation-charging-framerate = 750

[module/wifi]
type = internal/network
