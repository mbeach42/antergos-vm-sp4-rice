# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl -- set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl -- set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightnessh
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 #i


# redirect sound to headphones
bindsym $mod+m exec "/usr/local/bin/switch-audio-port"

# Autostart apps
#exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id dropbox &
exec --no-startup-id "compton -cC"
exec_always --no-startup-id dunst
exec_always --no-startup-id feh --bg-scale ~/wallpaper/sky-mountain.jpg
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always --no-startup-id ~/.monitors.sh


assign [class="Slack"] 9
assign [class="Mailspring"] 9
assign [class="GitKraken"] 1
assign [class="MineTime"] 9
#for_window [class="gitKraken"] move container to workspace 1
#for_window [class="mailspring"] move container to workspace 9
#for_window [class="slack"] move container to workspace 9

#exec_always redshift
exec --no-startup-id i3-msg 'workspace 9; exec slack'
exec --no-startup-id i3-msg 'workspace 9; exec minetime'
exec --no-startup-id i3-msg 'workspace 9; exec mailspring'
exec --no-startup-id i3-msg 'workspace 1; exec gitkraken'
exec --no-startup-id i3-msg 'workspace 2; exec termite'
exec --no-startup-id i3-msg 'workspace 2; exec firefox'
